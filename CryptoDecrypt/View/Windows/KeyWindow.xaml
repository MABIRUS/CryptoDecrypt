<Window x:Class="CryptoDecrypt.KeyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptoDecrypt"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner" WindowStyle="None"
        Title="KeyWindow" Height="200" Width="200">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Insert Key" FontSize="25" HorizontalAlignment="Center" Margin="10"/>
            <TextBox x:Name="tbKey" Width="150" Height="50" FontSize="20"
                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                     TextChanged="tbKey_TextChanged"/>
            <Button x:Name="btnOK" Content="OK" FontSize="15" Width="75" Height="30" Margin="10"
                    Click="btnOK_Click" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
